<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@drawable/blancoazulx2"

    >

    <GridView
        android:id="@+id/grilla"
        android:layout_width="match_parent"
        android:layout_height="284dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="97dp"
        android:gravity="center"
        android:numColumns="4"
        android:textColor="@android:color/white"
        app:fontFamily="@font/aclonica"
        android:horizontalSpacing="1dp"
        android:verticalSpacing="1dp" ></GridView>


    <Button
        android:id="@+id/btn_cancelarComparar"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="70dp"
        android:layout_marginStart="31dp"
        android:text="CANCELAR"
        app:fontFamily="@font/aclonica"
        android:background="@drawable/skygreen"
        android:textColor="@android:color/white"/>

    <Button
        android:id="@+id/btn_compararPopup"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btn_cancelarComparar"
        android:layout_marginEnd="26dp"
        android:text="RESERVAR"
        app:fontFamily="@font/aclonica"
        android:background="@drawable/skygreen"
        android:textColor="@android:color/white"/>

    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="ComparaciÃ³n de los CarWash seleccionados"
        android:textAlignment="center"
        app:fontFamily="@font/aclonica"
        android:textSize="18sp" />

</RelativeLayout>