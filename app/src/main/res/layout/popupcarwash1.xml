<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/azul4pq"
    android:id="@+id/popupprincipal"
    >


    <LinearLayout
        android:layout_width="434dp"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <ImageView
            android:id="@+id/iconpopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:contentDescription="logotipo CarWash"
            android:padding="2dip"
            android:src="@mipmap/ic_carwash" />

        <TextView
            android:id="@+id/titlepopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imagengrande"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numStars="5"
            android:stepSize="1.0"
            android:textAlignment="center"
/>
        <Button
            android:id="@+id/btn_reservar"
            android:layout_width="100dp"
            android:layout_height="36dp"
            android:layout_gravity="center_horizontal"
            android:text="RESERVAR"
            app:fontFamily="@font/aclonica"
            android:textColor="@android:color/white"
            android:background="@drawable/naranja"/>

    </LinearLayout>
</LinearLayout>
