<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/azul4"
    tools:context="com.example.rgamero.carwash.MasInformacionActivity">

    <TextView
        android:id="@+id/txtV_carwash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="CarWash Expres"
        app:fontFamily="@font/aclonica"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_carwash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        app:srcCompat="@mipmap/splishsplashcarwash" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtLavadoSimple1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/aclonica"
                android:text="Lavado Simple"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtPrecio1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                android:fontFamily="@font/aclonica"
                android:text=" 10 Soles"></TextView>

            <TextView
                android:id="@+id/txtTiempo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:fontFamily="@font/aclonica"
                android:text=" 10 minutos"></TextView>

            <TextView
                android:id="@+id/txtLavadoSalon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/aclonica"
                android:text="Lavado SalÃ³n"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtPrecioSalon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                android:fontFamily="@font/aclonica"
                android:text=" 25 Soles"></TextView>

            <TextView
                android:id="@+id/txtTiempoSalon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:fontFamily="@font/aclonica"
                android:text=" 45 minutos"></TextView>

            <TextView
                android:id="@+id/txtLavadoExterior"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/aclonica"
                android:text="Lavado Exterior"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtPrecioExterior"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                android:fontFamily="@font/aclonica"
                android:text=" 20 Soles"></TextView>

            <TextView
                android:id="@+id/txtTiempoExterior"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:fontFamily="@font/aclonica"
                android:text=" 35 minutos"></TextView>

            <TextView
                android:id="@+id/txtLavadoPRO"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/aclonica"
                android:text="Lavado Pro Sdan"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/txtPrecioPro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_attach_money_black_24dp"
                android:fontFamily="@font/aclonica"
                android:text=" 85 Soles"></TextView>

            <TextView
                android:id="@+id/txtTiempoPro"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/ic_timer_black_24dp"
                android:fontFamily="@font/aclonica"
                android:text=" 135 minutos"></TextView>


        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_cancelarmasinfo"
        android:layout_width="117dp"
        android:layout_height="37dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="64dp"
        android:background="@drawable/naranja"
        android:text="Cancelar"
        android:textColor="@android:color/white"
        app:fontFamily="@font/aclonica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_reservarmasinfo"
        android:layout_width="117dp"
        android:layout_height="36dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/naranja"
        android:text="Reservar"
        android:textColor="@android:color/white"
        app:fontFamily="@font/aclonica"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.557"
        app:layout_constraintStart_toEndOf="@+id/btn_cancelarmasinfo" />


</android.support.constraint.ConstraintLayout>
